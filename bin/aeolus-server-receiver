#!/bin/sh

LUA_BIN_FILE="${LUA_BIN_FILE:=lua}"

AELOUS_BIN_DIR="${AELOUS_BIN_DIR:=$(realpath "$(readlink -f "$(dirname "$0")")")}/"
AELOUS_ETC_PCAP_ENV_FILE="${AELOUS_ETC_PCAP_ENV_FILE:=${AELOUS_BIN_DIR}../etc/db-env.sh}"
AELOUS_ETC_DB_ENV_FILE="${AELOUS_ETC_DB_ENV_FILE:=${AELOUS_BIN_DIR}../etc/pcap-env.sh}"


. "$AELOUS_ETC_PCAP_ENV_FILE"
. "$AELOUS_ETC_DB_ENV_FILE"

cd "${AELOUS_BIN_DIR}../lib"
"$LUA_BIN_FILE" "${AELOUS_BIN_DIR}aeolus-server-receiver.lua"
